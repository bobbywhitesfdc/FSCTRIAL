<aura:component>
    <aura:attribute name="label" type="String" required="true" description="Message to show" />
    <div class="">
        <div class="slds-card__header slds-grid" />
        <div class="slds-card__body slds-text-align--center">
            <lightning:formattedText aura:id="message-place-holder" value="{!v.label}" />
        </div>
        <div class="slds-card__footer" />
    </div>
</aura:component>